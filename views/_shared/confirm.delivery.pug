mixin confirmDelivery()
    div(class="confirm-deliver-form modal fade", id="confirmDeliveryModal", role="dialog")
        div.modal-dialog.modal-sm
            div.modal-content
                div.modal-body
                    .container
                        .row
                            h2.col-xs-3 Confirm Delivery
                    div.modal-footer
                        button(type="submit") Confirm   
                        button(type="submit") Cancel   