mixin login()    
    div(class="login-form modal fade", id="loginModal", role="dialog")
        div.modal-dialog.modal-sm
            div.modal-content
                form.modal-body(action="/login" method="post")
                    .row
                        h2.col-xs-3 Login
                    .row
                        .form-group.col-xs-3
                            div.input-height
                                label(for="", value="") Email:          
                            div.input-height
                                label(for="", class="login-label" value="") Password:            
                        .form-group.col-xs-6
                            div.input-height
                                input(type="email", name="username", id="loginFormEmail", placeholder="my@email.com")
                                span(id="loginFormMailError", class="errorSpan") Required
                            div.input-height
                                input(type="password", id="loginFormPassword", name="password")
                                span(id="loginFormPasswordError", class="errorSpan") Required
                    div.modal-footer
                        button(type="submit", class="btn btn-default", id="loginFormSubmit") Login
                        button(type="submit", class="btn btn-default", id="loginFormClose" ,data-toggle="modal" data-target="#loginModal") Close     
