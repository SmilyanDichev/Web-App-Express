mixin register()
    .reg-form.modal.fade(id="regModal", role="dialog" )
        .modal-dialog
            .modal-content.container-fluid
                form(action="/register" method="post")
                    .row.modal-header
                        h2 Register
                        span.col-xs-4.col-xs-offset-4(id="signInFormUserValidationError") &nbsp 
                    .modal-body.input-height
                        .row.input-height 
                            label.col-xs-3 Name:
                            input.regFormInput.col-xs-7.col-xs-offset-2(type="text", name="name", id="regFormName", placeholder="Your name")
                            .formError.col-xs-7.col-xs-offset-3(id="regFormNameError")
                    .modal-body.input-height
                        .row.input-height
                            label.col-xs-3 Email:
                            input.regFormInput.col-xs-7.col-xs-offset-2(type="email", name="email", id="regFormEmail", placeholder="your@email.com")
                            .formError.col-xs-7.col-xs-offset-3(id="regFormEmailError", class="errorSpan")
                    .modal-body.input-height
                        .row.input-height
                            label.col-xs-3 Password:
                            input.regFormInput.col-xs-7.col-xs-offset-2(type="password", name="password", id="regFormPassword", placeholder="Password")
                            .formError.col-xs-7.col-xs-offset-3(id="regFormPasswordError")
                    .modal-body.input-height
                        .row.input-height
                            label.col-xs-3 Confirm Password:
                            input.regFormInput.col-xs-7.col-xs-offset-2(type="password", name="password2", id="regFormPasswordConfirm", placeholder="Password")
                            .formError.col-xs-7.col-xs-offset-3(id="regFormPasswordConfirmError")
                    .modal-body.input-height
                        .row.input-height
                            label.col-xs-3 City:
                            input.regFormInput.col-xs-7.col-xs-offset-2(type="text", name="city", id="regFormLine1", placeholder="City")
                            .formError.col-xs-7.col-xs-offset-3(id="regFormLine1Error")
                    .modal-body.input-height
                        .row.input-height
                            label.col-xs-3 Street:
                            input.regFormInput.col-xs-7.col-xs-offset-2(type="text", name="street", id="regFormLine2", placeholder="Street")
                            .formError.col-xs-7.col-xs-offset-3(id="regFormLine2Error")
                    .modal-body.input-height
                        .row.input-height
                            label.col-xs-3 Apartment:
                            input.regFormInput.col-xs-7.col-xs-offset-2(type="text", name="apartment", id="regFormLine3", placeholder="Apartment")
                            .formError.col-xs-7.col-xs-offset-3(id="regFormLine3Error")
                    .modal-footer
                        .row
                            button.btn.btn-default.col-xs-4.col-xs-offset-2(type="submit", id="signinFormSubmit") Submit
                            button.btn.btn-default.col-xs-4.col-xs-offset-4(type="button", id="signinFormClose" ,data-toggle="modal" data-target="#regModal") Close     