mixin confirmDelivery()
    .login-form.modal.fade(id="confirmDeliveryModal", role="dialog")
        .modal-dialog.modal-sm
            div.modal-content.container-fluid
                div
                    .modal-body
                        .row
                            label.text-center.col-xs-12 Are you sure?
                    .modal-footer
                        .row
                            button.col-xs-5.col-xs-offset-1.btn.btn-default( id='yesButtonconfirmOrder', type="button", data-toggle="modal", data-target="#confirmDeliveryModal")
                                a
                                    span
                                        |  Yes
                            button.col-xs-5.btn.btn-default(type="button", id="confirmFormClose" ,data-toggle="modal" data-target="#confirmDeliveryModal") 
                                a
                                    span
                                        |  No